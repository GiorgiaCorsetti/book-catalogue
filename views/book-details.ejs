<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= book.title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Adamina&family=Antic&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"></head>
<body>
  <div id="content">
    <div class="container my-5 details">
        <!-- Book Title -->
        <h1 class="display-4 text-center mb-4"><%= book.title %></h1>
        <div class="text-center">
          <img src="<%= coverImageUrl %>" alt="Cover image for <%= book.title %>" 
               onerror="this.onerror=null; this.src='/images/standard_cover.jpg';" 
               style="width:200px; height:auto; display:block; margin:auto;">
        </div>
    <!-- Details about the book -->
    <div class="card mx-auto my-4 details-card" style="max-width: 40rem;">
      <div class="card-body">
        <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
        <p class="card-text"><strong>Subject:</strong> <%= book.subject %></p>
        <p class="card-text"><strong>Rating:</strong> <%= book.rating %>/5</p>
        <% if (book.unique_description) { %>
            <p class="card-text"><strong>Description:</strong> <%= book.unique_description %></p>
        <% } else { %>
            <p class="card-text">Description not available.</p>
        <% } %>
        <p class="card-text"><strong>ISBN:</strong> <%= book.isbn %></p> <!-- Display ISBN -->
    </div>
        <!-- Buttons Centered at the Bottom of the Card -->
        <div class="card-footer text-center">
          <a href="/books/edit/<%= book.id %>" class="btn btn-warning me-2">Edit Book</a>
          <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this book?');">
            <button type="submit" class="btn btn-danger">Delete Book</button>
          </form>
        </div>
      </div>


      <div class="text-center">
        <a href="/books" class="btn btn-dark">Back to Books List</a>
      </div>

  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script></body>
</div>
</html>

<%- include('partials/footer') %>